{
  "manifest_version": 3,
  "name": "LBP Helper Tools",
  "description": "A set of internal helper tools for LBP workflow",
  "version": "1.0.0",

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://app.propertymeld.com/*"],
      "js": ["src/content/meld.ts"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["cookies", "downloads", "tabs", "scripting", "clipboardRead", "clipboardWrite"],

  "host_permissions": [
    "https://app.propertyware.com/*",
    "https://api.propertyware.com/*",
    "https://app.propertymeld.com/*"
  ]
}
